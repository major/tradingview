        // Row 4: Volume Status ğŸ’§ NEW - liquidity drain
        table.cell(infoTable, 0, 4, 'Volume', text_color = color.white, text_size = textSize)
        volumeText = volumeDeclining ? 'â¬‡ï¸ Declining' : 'Normal'
