//@version=6
indicator('TTM Squeeze Overlay', shorttitle = 'TTM Squeeze', overlay = true)

// Color inputs
squeezeOnColor = input.color(color.black, title = 'Squeeze ON Color', group = 'Colors')
squeezeFiresColor = input.color(color.green, title = 'Squeeze Fires Color', group = 'Colors')

// Size input
sizeOption = input.string('Small', title = 'Circle Size', options = ['Tiny', 'Small', 'Normal', 'Large', 'Huge'], group = 'Display')

// TTM Squeeze calculation
// Bollinger Bands: 20 period SMA, 2.0 std dev
basis = ta.sma(close, 20)
bbDev = ta.stdev(close, 20) * 2.0
bbUpper = basis + bbDev
bbLower = basis - bbDev

// Keltner Channels: 20 period EMA, 1.5 ATR
kcBasis = ta.ema(close, 20)
kcRange = ta.atr(20) * 1.5
kcUpper = kcBasis + kcRange
kcLower = kcBasis - kcRange

// Squeeze detection: BB inside KC
squeezeOn = bbLower > kcLower and bbUpper < kcUpper

// State machine for detecting fires (ON â†’ OFF transition)
var bool wasSqueezeOn = false
squeezeFires = wasSqueezeOn and not squeezeOn
wasSqueezeOn := squeezeOn

// Plot shapes - conditional on size selection
plotshape(sizeOption == 'Tiny' ? squeezeOn : na, title = 'Squeeze ON (Tiny)', style = shape.circle, location = location.belowbar, color = squeezeOnColor, size = size.tiny)
plotshape(sizeOption == 'Small' ? squeezeOn : na, title = 'Squeeze ON (Small)', style = shape.circle, location = location.belowbar, color = squeezeOnColor, size = size.small)
plotshape(sizeOption == 'Normal' ? squeezeOn : na, title = 'Squeeze ON (Normal)', style = shape.circle, location = location.belowbar, color = squeezeOnColor, size = size.normal)
plotshape(sizeOption == 'Large' ? squeezeOn : na, title = 'Squeeze ON (Large)', style = shape.circle, location = location.belowbar, color = squeezeOnColor, size = size.large)
plotshape(sizeOption == 'Huge' ? squeezeOn : na, title = 'Squeeze ON (Huge)', style = shape.circle, location = location.belowbar, color = squeezeOnColor, size = size.huge)

plotshape(sizeOption == 'Tiny' ? squeezeFires : na, title = 'Squeeze Fires (Tiny)', style = shape.circle, location = location.belowbar, color = squeezeFiresColor, size = size.tiny)
plotshape(sizeOption == 'Small' ? squeezeFires : na, title = 'Squeeze Fires (Small)', style = shape.circle, location = location.belowbar, color = squeezeFiresColor, size = size.small)
plotshape(sizeOption == 'Normal' ? squeezeFires : na, title = 'Squeeze Fires (Normal)', style = shape.circle, location = location.belowbar, color = squeezeFiresColor, size = size.normal)
plotshape(sizeOption == 'Large' ? squeezeFires : na, title = 'Squeeze Fires (Large)', style = shape.circle, location = location.belowbar, color = squeezeFiresColor, size = size.large)
plotshape(sizeOption == 'Huge' ? squeezeFires : na, title = 'Squeeze Fires (Huge)', style = shape.circle, location = location.belowbar, color = squeezeFiresColor, size = size.huge)

// Alert condition
alertcondition(squeezeFires, title = 'TTM Squeeze Fires', message = 'TTM Squeeze fired on {{ticker}}')
